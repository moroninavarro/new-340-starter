<% if (title) { %>
<h1><%= title %></h1>
<p>All fields are required.</p>
<form action="/account/registration" method="post">

        <label>First name:</label>
            <input type="text" name="account_firstname" id="firstName" required>
    
        <label>Last name:</label>
            <input type="text" name="account_lastname" id="lastName" required>

        <label>Email Address:</label>
            <input type="email" name="account_email" id="emailAddress" required>

            
         <label for="accountPassword">Password:</label>
            <!-- <div>  -->
            <input type="password" name="account_password" title="Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character" id="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <!-- </div> -->
        
        <button>REGISTER</button>
    
    
</form>
<% } else {
    res.redirect('/account')
} %>